@using Entities
@model News

@{
    Layout = "_ReporterLayout";
    var categories = ViewBag.categories as List<Category>;
    var file = ViewBag.IfromFIle as IFormFile;
}

<h2>ایجاد خبر</h2>

<div class="container col-lg-6">
    <form asp-action="AddNews" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" asp-for="@Model">آپلود عکس</label>
            <input class="form-control" type="file" asp-for="@file" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PictureAlt" class="form-label"></label>
            <input class="form-control" asp-for="@Model.PictureAlt" type="text" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">عنوان</label>
            <input class="form-control" type="text" asp-for="@Model.Title" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ShortDescription" class="form-label">متن کوتاه</label>
            <textarea rows="2" class="form-control" asp-for="@Model.ShortDescription"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">متن خبر</label>
            <textarea rows="4" class="form-control" asp-for="@Model.Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CategoryId">دسته بندی را انتخاب کنید</label>
            <select class="form-select" asp-for="@Model.CategoryId">
                @foreach (var item in categories)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
        <div class="d-grid gap-2">
            <input type="submit" class="btn btn-primary" value="ایجاد" />
        </div>
    </form>
</div>